@namespace SIPOTEK.Components.Pages.Transaksi.ObatMasuk

<MudDialog>
    <DialogContent>
        <MudContainer>
            <div class="d-flex align-center mb-4">
                <MudIcon Icon="@Icons.Material.Filled.Warning"
                         Color="Color.Error"
                         Size="Size.Large"
                         Class="mr-3" />
                <MudText Typo="Typo.h6">Konfirmasi Hapus</MudText>
            </div>

            <MudText Typo="Typo.body1" Class="mb-4">
                Apakah Anda yakin ingin menghapus transaksi obat masuk berikut?
            </MudText>

            <MudCard Elevation="2" Class="mb-4">
                <MudCardContent>
                    <MudGrid>
                        <MudItem xs="6">
                            <MudText Typo="Typo.subtitle2">Nama Obat:</MudText>
                            <MudText Typo="Typo.body1">@ObatMasuk.Obat?.NamaObat</MudText>
                        </MudItem>
                        <MudItem xs="6">
                            <MudText Typo="Typo.subtitle2">Jumlah Masuk:</MudText>
                            <MudText Typo="Typo.body1">@ObatMasuk.JumlahMasuk</MudText>
                        </MudItem>
                        <MudItem xs="6">
                            <MudText Typo="Typo.subtitle2">Total Harga:</MudText>
                            <MudText Typo="Typo.body1">Rp @ObatMasuk.TotalHarga.ToString("N0")</MudText>
                        </MudItem>
                        <MudItem xs="6">
                            <MudText Typo="Typo.subtitle2">Supplier:</MudText>
                            <MudText Typo="Typo.body1">@ObatMasuk.Supplier</MudText>
                        </MudItem>
                        <MudItem xs="6">
                            <MudText Typo="Typo.subtitle2">Tanggal Masuk:</MudText>
                            <MudText Typo="Typo.body1">@ObatMasuk.TglMasuk.ToString("dd/MM/yyyy")</MudText>
                        </MudItem>
                        <MudItem xs="6">
                            <MudText Typo="Typo.subtitle2">Tanggal Kadaluarsa:</MudText>
                            <MudText Typo="Typo.body1">@ObatMasuk.TglKadaluarsaM.ToString("dd/MM/yyyy")</MudText>
                        </MudItem>
                    </MudGrid>
                </MudCardContent>
            </MudCard>

            <MudAlert Severity="Severity.Warning" Class="mb-2">
                <strong>Perhatian:</strong> Penghapusan transaksi ini akan mengurangi stok obat sesuai jumlah yang tercatat!
            </MudAlert>
        </MudContainer>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancel">Batal</MudButton>
        <MudButton Color="Color.Error"
                   Variant="Variant.Filled"
                   OnClick="Submit"
                   StartIcon="@Icons.Material.Filled.Delete">
            Hapus
        </MudButton>
    </DialogActions>
</MudDialog>