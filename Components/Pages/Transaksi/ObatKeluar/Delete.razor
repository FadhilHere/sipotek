@namespace SIPOTEK.Components.Pages.Transaksi.ObatKeluar

<MudDialog>
    <DialogContent>
        <MudContainer>
            <div class="d-flex align-center mb-4">
                <MudIcon Icon="@Icons.Material.Filled.Warning"
                         Color="Color.Error"
                         Size="Size.Large"
                         Class="mr-3" />
                <MudText Typo="Typo.h6">Konfirmasi Hapus</MudText>
            </div>

            <MudText Typo="Typo.body1" Class="mb-4">
                Apakah Anda yakin ingin menghapus transaksi penjualan obat berikut?
            </MudText>

            <MudCard Elevation="2" Class="mb-4">
                <MudCardContent>
                    <MudGrid>
                        <MudItem xs="6">
                            <MudText Typo="Typo.subtitle2">No Transaksi:</MudText>
                            <MudText Typo="Typo.body1">@ObatKeluar.NoTransaksi</MudText>
                        </MudItem>
                        <MudItem xs="6">
                            <MudText Typo="Typo.subtitle2">Nama Obat:</MudText>
                            <MudText Typo="Typo.body1">@ObatKeluar.Obat?.NamaObat</MudText>
                        </MudItem>
                        <MudItem xs="6">
                            <MudText Typo="Typo.subtitle2">Jumlah Keluar:</MudText>
                            <MudText Typo="Typo.body1">@ObatKeluar.JumlahKeluar</MudText>
                        </MudItem>
                        <MudItem xs="6">
                            <MudText Typo="Typo.subtitle2">Total Harga:</MudText>
                            <MudText Typo="Typo.body1">Rp @ObatKeluar.TotalHarga.ToString("N0")</MudText>
                        </MudItem>
                        <MudItem xs="6">
                            <MudText Typo="Typo.subtitle2">Pelanggan:</MudText>
                            <MudText Typo="Typo.body1">@ObatKeluar.Pelanggan</MudText>
                        </MudItem>
                        <MudItem xs="6">
                            <MudText Typo="Typo.subtitle2">Tanggal:</MudText>
                            <MudText Typo="Typo.body1">@ObatKeluar.TglKeluar.ToString("dd/MM/yyyy HH:mm")</MudText>
                        </MudItem>
                    </MudGrid>
                </MudCardContent>
            </MudCard>

            <MudAlert Severity="Severity.Warning" Class="mb-2">
                <strong>Perhatian:</strong> Penghapusan transaksi ini akan mengembalikan stok obat sesuai jumlah yang terjual!
            </MudAlert>
        </MudContainer>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancel">Batal</MudButton>
        <MudButton Color="Color.Error"
                   Variant="Variant.Filled"
                   OnClick="Submit"
                   StartIcon="@Icons.Material.Filled.Delete">
            Hapus
        </MudButton>
    </DialogActions>
</MudDialog>