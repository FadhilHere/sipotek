                               @oninput="FilterObat">
                    </div>
                </div>
            </div>
        </div>

        <!-- Products Grid -->
        <div class="row">
            @if (isLoading)
            {
                <div class="col-12">
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-3">Memuat data obat...</p>
                    </div>
                </div>
            }
            else if (paginatedObatList.Any())
            {
                @foreach (var obat in paginatedObatList)
                {
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="product-card fade-in-up">
                            <div class="product-image">
                                <img src="@GetImageUrl(obat)" 
                                     alt="@obat.NamaObat" 
                                     class="card-img-top">
                                <div class="product-status @GetStockColor(obat.Stok, obat.StokMinimum)">
                                    @GetStockStatus(obat.Stok, obat.StokMinimum)
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="product-category">
                                    <span class="badge bg-info">@obat.JenisObat</span>
                                    <span class="badge bg-secondary ms-1">@obat.BentukObat</span>
                                </div>
                                <h5 class="product-name">@obat.NamaObat</h5>
                                @if (!string.IsNullOrEmpty(obat.Produsen))
                                {
                                    <p class="product-producer">@obat.Produsen</p>
                                }
                                @if (!string.IsNullOrEmpty(obat.Deskripsi))
                                {
                                    <p class="product-description">
                                        @(obat.Deskripsi.Length > 80 ? obat.Deskripsi.Substring(0, 80) + "..." : obat.Deskripsi)
                                    </p>
                                }
                                <div class="product-price">
                                    <span class="price">Rp @obat.Harga.ToString("N0")</span>
                                </div>
                                <div class="product-stock">
                                    <i class="fas fa-boxes me-1"></i>
                                    Stok: @obat.Stok unit
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="fas fa-search fa-3x text-muted mb-3"></i>
                        <h5>Obat tidak ditemukan</h5>
                        <p class="text-muted">Coba gunakan kata kunci pencarian yang berbeda</p>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination Info -->
