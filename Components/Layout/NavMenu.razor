@using MudBlazor

<MudNavMenu>
    <div class="d-flex align-center px-4 py-3">
        <MudIcon Icon="@Icons.Material.Filled.LocalPharmacy" Color="Color.Primary" Size="Size.Large" Class="mr-3" />
        <div>
            <MudText Typo="Typo.h6" Color="Color.Primary">SIPOTEK</MudText>
            <MudText Typo="Typo.caption" Color="Color.Secondary">Sistem Informasi Apotek</MudText>
        </div>
    </div>

    <MudDivider Class="mb-3" />

    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">
        Dashboard
    </MudNavLink>

    <MudNavGroup Title="Master Data" Icon="@Icons.Material.Filled.Storage" Expanded="true">
        <MudNavLink Href="/obat" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Medication">
            Data Obat
        </MudNavLink>
    </MudNavGroup>

    <MudNavGroup Title="Transaksi" Icon="@Icons.Material.Filled.SwapHoriz" Expanded="true">
        <MudNavLink Href="/transaksi/masuk" Icon="@Icons.Material.Filled.ArrowDownward">
            Obat Masuk
        </MudNavLink>
        <MudNavLink Href="/transaksi/keluar" Icon="@Icons.Material.Filled.ArrowUpward">
            Obat Keluar
        </MudNavLink>
    </MudNavGroup>

    <MudNavGroup Title="Laporan" Icon="@Icons.Material.Filled.Assessment" Expanded="false">
        <MudNavLink Href="/laporan/stok" Icon="@Icons.Material.Filled.Inventory">
            Laporan Stok
        </MudNavLink>
        <MudNavLink Href="/laporan/penjualan" Icon="@Icons.Material.Filled.TrendingUp">
            Laporan Penjualan
        </MudNavLink>
    </MudNavGroup>

    <MudDivider Class="my-3" />

    <MudNavGroup Title="Pengaturan" Icon="@Icons.Material.Filled.Settings" Expanded="false">
        <MudNavLink Href="/pengaturan/notifikasi" Icon="@Icons.Material.Filled.Notifications">
            Notifikasi
        </MudNavLink>
        <MudNavLink Href="/pengaturan/backup" Icon="@Icons.Material.Filled.Backup">
            Backup Data
        </MudNavLink>
    </MudNavGroup>

</MudNavMenu>